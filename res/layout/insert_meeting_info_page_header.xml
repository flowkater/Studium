<?xml version="1.0"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_personal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stud_bg1" >

    <TextView
        android:id="@+id/insert_meeting_sub_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_object"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="모임 정보 입력" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/insert_meeting_sub_info_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="장소" />

    <EditText
        android:id="@+id/meeting_location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="모임 장소를 입력하세요"
        android:padding="10dip"
        android:singleLine="true" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/meeting_location_edit_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="시간" />

    <TimePicker
        android:id="@+id/meeting_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/todolist_sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meeting_time_picker"
        android:layout_marginTop="20dip"
        android:background="@drawable/sub_object"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="숙제, 해야할일" />

</RelativeLayout>