<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/member_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/member_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/member_img"
        android:text="ironok" />

    <TextView
        android:id="@+id/posting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/member_name"
        android:layout_alignBottom="@+id/member_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="8월 3일 오후 6시 30분"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/member_name"
        android:layout_alignRight="@+id/posting_time"
        android:layout_below="@+id/member_name"
        android:layout_marginTop="10dp"
        android:text="나 오늘밤 외로워요 나좀 살려줘요. 나 오늘밤 외로워요 나좀 살려줘요. 나 오늘밤 외로워요 나좀 살려줘요." />

    <ImageView
        android:id="@+id/feed_content_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/feed_content_text"
        android:layout_alignRight="@+id/feed_content_text"
        android:layout_below="@+id/feed_content_text"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_month" />

    <ImageView
        android:id="@+id/comment_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/feed_content_img"
        android:layout_below="@+id/feed_content_img"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment_img"
        android:layout_toLeftOf="@+id/comment_img"
        android:text="댓글수 0개" />

</RelativeLayout>