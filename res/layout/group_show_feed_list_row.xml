<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/member_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
         />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/member_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/posting_time"
        android:layout_toRightOf="@+id/member_img"
        />

    <TextView
        android:id="@+id/posting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/member_name"
        android:layout_alignBottom="@+id/member_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
       
        android:textSize="10sp" />

    <TextView
        android:id="@+id/post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/member_name"
        android:layout_alignRight="@+id/posting_time"
        android:layout_below="@+id/member_name"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/feed_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/post_body"
        android:layout_alignRight="@+id/post_body"
        android:layout_below="@+id/post_body"
        android:layout_marginTop="10dp"
        android:scaleType="fitStart" />

    <ImageView
        android:id="@+id/comment_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignRight="@+id/feed_content_img"
        android:layout_below="@+id/feed_content_img"
        android:layout_marginTop="10dp"
        android:src="@drawable/group_show_comment_img" />

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comment_img"
        android:layout_toLeftOf="@+id/comment_img"
        android:layout_marginRight="10dp"
        android:text="댓글수 0개" />
    
      <ImageView
            android:id="@+id/group_show_feed_list_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/comment_img"
            android:layout_marginTop="10dp"
            android:background="@drawable/divider5" />
    

</RelativeLayout>