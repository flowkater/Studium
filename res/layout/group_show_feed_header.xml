<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="그룹 이름" />

    <TextView
        android:id="@+id/group_goal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_name"
        android:layout_below="@+id/group_name"
        android:layout_marginTop="15dp"
        android:text="그룹 목표 그룹 목표 그룹 그룹 목표 그룹 목표 그룹 그룹 목표 그룹 목표 그룹" />

    <Button
        android:id="@+id/group_meeting_date_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/group_name"
        android:layout_marginRight="20dp"
        android:text="모임"
        android:textSize="10sp" />

    <Button
        android:id="@+id/group_announce_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/group_meeting_date_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/group_meeting_date_btn"
        android:text="공지"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/group_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/group_meeting_date_btn"
        android:layout_below="@+id/group_goal"
        android:layout_marginTop="5dp"
        android:text="80%" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_goal"
        android:layout_alignRight="@+id/group_meeting_date_btn"
        android:layout_below="@+id/group_progress"
        android:layout_marginTop="5dp"
        android:progress="80" />

</RelativeLayout>