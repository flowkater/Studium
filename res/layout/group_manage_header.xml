<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_main_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/group_manage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_object"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="그룹 관리" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/recruit_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="모집 중" />

        <Button
            android:id="@+id/create_partymessage_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="모집 메시지 쓰기 " />
    </LinearLayout>
    
    <TextView
        android:id="@+id/user_manage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_object"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="가입 대기자" />

</LinearLayout>