<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stud_bg1"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/post_string"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg"
                android:gravity="top"
                android:hint="글을 입력하세요"
                android:padding="10dip" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/postcreate_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_string"
                android:layout_centerHorizontal="true"
                android:text="사진 올리기" />
            
            <CheckBox
        android:id="@+id/notice_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignBottom="@+id/postcreate_img_btn"
        android:layout_toLeftOf="@+id/postcreate_img_btn"
        android:layout_marginRight="10dip"
        android:text="공지" />

            <ImageView
                android:id="@+id/postcreate_img"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_below="@+id/postcreate_img_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#dddddd"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>