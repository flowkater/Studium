<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/post_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:hint="글을 입력하세요" >
        </EditText>

        <Button
            android:id="@+id/postcreate_img_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/post_string"
            android:layout_alignRight="@+id/post_string"
            android:layout_below="@+id/post_string"
            android:text="사진 올리기" />

        <ImageView
            android:id="@+id/postcreate_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/postcreate_img_btn"
            android:layout_below="@+id/postcreate_img_btn"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:background="#dddddd"
             />
        
    </RelativeLayout>

